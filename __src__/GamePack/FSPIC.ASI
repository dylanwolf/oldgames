CLS
A$ = COMMAND$
A$ = LTRIM$(A$)
SCREEN 13
OPEN "I",1,A$
IF ERROR > 0 THEN ERRORHANDLE:
WHILE (ERROR <> 99)
INPUT# 1, R
INPUT# 1, C
INPUT# 1, CLR
PSET (R,C),CLR
WEND
LOCATE 23,0
PRINT "                                       "
CLOSE 1
WHILE (I$ = "")
I$ = INKEY$
WEND
SCREEN 0
WIDTH 80
CLS
END
ERRORHANDLE:
SCREEN 0
WIDTH 80
CLS
COLOR 15,0
PRINT A$;
PRINT " not found"
I$ = ""
WHILE (I$ = "")
I$ = INKEY$
WEND
END
